<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:clickable="true" android:background="?android:attr/selectableItemBackground"
    android:padding="12dp" android:layout_columnWeight="1" android:layout_rowWeight="1" android:gravity="fill_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_credit_card_black_48dp"
        android:contentDescription="成绩查询"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tool_text"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成绩查询"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_margin="3dp"/>
</LinearLayout>