<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/score_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:id="@+id/sc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0909009090"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sc_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2016-2017学年"/>

            <TextView
                android:id="@+id/sc_term"
                android:text="第一学期"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_tail"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="16dp"
                android:layout_weight="3"
                android:id="@+id/sc_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Linux操作系统"
                android:textSize="20dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/sc_sc"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="99"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:gravity="center"/>

        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="4dp"
            android:id="@+id/score_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7"
                >

                <TextView
                    android:id="@+id/sc_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学分 2"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/normal_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平时成绩 75"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/end_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期末成绩 70"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/big_sc_sc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="99"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:textSize="42sp"
        android:layout_alignParentRight="true"/>



</RelativeLayout>
