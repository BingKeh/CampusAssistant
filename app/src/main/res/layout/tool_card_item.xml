
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="8dp"
    android:layout_weight="1">
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/news_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/card_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/md_new" />

            <TextView
                android:background="#2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/card_img"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@color/grey_50"
                android:text="失物招领"
                android:gravity="left"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/news_text"
            android:layout_below="@id/news_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textSize="20dp"
            android:gravity="left"
            android:text="失物招领"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/news_content"
            android:layout_below="@id/news_text"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="校园卡  掉落地点：图书馆   学号： 202140916"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/news_tail"
            android:layout_below="@id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享信息"
                android:background="#00000000" />
            <Button
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:textColor="#7AD3E0"
                android:background="#00000000"/>

        </LinearLayout>

    </RelativeLayout>




</android.support.v7.widget.CardView>


